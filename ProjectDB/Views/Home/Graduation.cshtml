@model Person

@{ ViewData["Title"] = "Min examen"; }


<partial name="navbar" />

<br />
<br />

<h4>Min examen</h4>
<br />
<br />

<div style="margin: auto ">
    <div style="text-align: center">

        <h2 class="year"> Du har @ViewData["totYear"] år, @ViewData["totMonth"] månader och @ViewData["totDay"] dagar kvar tills examen!</h2>
        <br />
        

    </div>

    <br />
    <br />

    <div class="row">
        <div class="column">
            <h5><b>Examensdatum:</b><br />@ViewBag.date</h5>

        </div>

        <div class="column">
            <h5><b>Antal lästa HP:</b><br />@ViewBag.HP</h5>
        </div>

        <div class="column">
            <h5><b>Totalt antal dagar:</b><br /> @ViewData["totalDays"]</h5>
        </div>

    </div>
</div>


<br />
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@ViewBag.error


<style>
    .row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 0px;
        align-items: center;
        height: auto;
        padding-left: 15%;
        padding-right: 15%;
    }

    .column {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }
</style>