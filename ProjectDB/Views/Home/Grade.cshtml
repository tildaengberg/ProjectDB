<style>
    .slidecontainer {
        width: 60%; 
    }

    
    .slider {
        -webkit-appearance: none; 
        appearance: none;
        width: 100%; 
        height: 15px; 
        border-radius: 5px;
        background: #d3d3d3; 
        outline: none; 
        opacity: 0.7; 
        -webkit-transition: .2s; 
        transition: opacity .2s;
    }

        
        .slider:hover {
            opacity: 1; 
        }

        
        .slider::-webkit-slider-thumb {
            -webkit-appearance: none; 
            appearance: none;
            border-radius: 50%;
            width: 25px; 
            height: 25px; 
            background: #14A2B7; 
            cursor: pointer; 
        }

        .slider::-moz-range-thumb {
            width: 25px; 
            height: 25px; 
            background: #14A2B7; 
            border-radius: 50%;
            cursor: pointer; 
        }
</style>

<script>var slider = document.getElementById("myRange");
    var output = document.getElementById("demo");
    output.innerHTML = slider.value; 

    
    slider.oninput = function () {
        output.innerHTML = this.value;
    }</script>

