@model Person

@{ ViewData["Title"] = "Ändra profilbild"; }

<partial name="navbar" />

<br />
<br />

<h4>Ändra profilbild</h4>

<p>Ladda upp en valfri bild. OBS! Endast formatet .png stödjs.</p>
<hr />

<div class=" =row">
    <div class="col-md-4">
        <form asp-action="Profile" method="get" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" id="formFile" name="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <input type="submit" value="Ladda upp" class="btn btn-dark" />
            </div>

        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
